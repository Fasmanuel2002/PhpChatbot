<div id="chat-container" style="width: 600px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; background-color: #e0f7fa; border-radius: 10px;">
    <div id="chat-window" style="height: 400px; overflow-y: scroll; background-color: #fff; padding: 10px; border: 1px solid #007bff; border-radius: 5px; margin-bottom: 10px;">
        @foreach (var message in Model.ChatHistory)
        {
            <p>@message</p>
        }
    </div>

    <div style="display: flex;">
        <input type="text" id="UserInput" placeholder="Escribe tu mensaje..." style="width: 85%; padding: 10px; margin-right: 10px; border-radius: 5px; border: 1px solid #005b9f;" />
        <button id="sendBtn" style="padding: 10px; background-color: #007bff; color: white; border-radius: 5px; border: none;">Enviar</button>
    </div>
</div>

<!-- Solo cargamos el script externo -->
<script src="~/js/site.js"></script>